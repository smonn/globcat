{
  "name": "globcat",
  "version": "2.0.1",
  "description": "Concatenate files from command line with glob pattern.",
  "type": "module",
  "keywords": [
    "glob",
    "wildcard",
    "file pattern",
    "concatenate",
    "command line"
  ],
  "exports": "./dist/globcat.js",
  "scripts": {
    "lint": "eslint . --fix",
    "build": "babel src --out-dir dist",
    "test": "mocha --require @babel/register 'tests/**/*.spec.js'",
    "test:watch": "npm test -- --watch"
  },
  "bin": {
    "globcat": "dist/bin/globcat.js"
  },
  "dependencies": {
    "async": "3.2.3",
    "combined-stream2": "1.1.2",
    "command-line-args": "5.2.1",
    "command-line-usage": "6.1.1",
    "glob": "7.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.7",
    "@babel/eslint-parser": "7.17.0",
    "@babel/preset-env": "7.16.11",
    "@babel/register": "7.18.9",
    "chai": "4.3.6",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "is-stream": "3.0.0",
    "mocha": "9.2.2",
    "prettier": "2.6.0"
  },
  "bugs": {
    "url": "https://github.com/smonn/globcat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/smonn/globcat.git"
  },
  "files": [
    "dist"
  ],
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "homepage": "https://github.com/smonn/globcat#readme",
  "author": "Simon Ingeson <smonnsource@gmail.com> (https://www.smonn.se/)",
  "license": "MIT"
}
