{
  "name": "globcat",
  "version": "1.1.0",
  "description": "Concatenate files from command line with glob pattern.",
  "keywords": [
    "glob",
    "wildcard",
    "file pattern",
    "concatenate",
    "command line"
  ],
  "main": "dist/globcat.js",
  "scripts": {
    "precoverage": "npm run build && echo ===== coverage",
    "coverage": "istanbul cover tape -- \"test/**/*Test.js\"",
    "prelint": "echo ===== lint",
    "lint": "eslint . --fix",
    "prebuild": "npm run lint && echo ===== build",
    "build": "babel src --out-dir dist",
    "pretest": "npm run build && echo ===== test",
    "test": "tape \"test/**/*Test.js\" | tap-spec",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prewatch": "npm install --silent",
    "watch": "onchange \"test/**/*Test.js\" \"src/**/*.js\" -i -v -w -- npm test"
  },
  "bin": {
    "globcat": "dist/bin/globcat.js"
  },
  "dependencies": {
    "async": "^2.6.0",
    "combined-stream2": "^1.1.2",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "is-stream": "^1.1.0",
    "istanbul": "^0.4.5",
    "onchange": "^4.0.0",
    "prettier": "^1.12.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.9.0"
  },
  "bugs": {
    "url": "https://github.com/smonn/globcat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/smonn/globcat.git"
  },
  "files": [
    "dist"
  ],
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "engines": {
    "node": ">=4.9.1",
    "npm": ">=2.15.11"
  },
  "homepage": "https://github.com/smonn/globcat#readme",
  "author": "Simon Ingeson <smonnsource@gmail.com> (https://www.smonn.se/)",
  "license": "MIT"
}
