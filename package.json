{
  "name": "globcat",
  "version": "1.2.0",
  "description": "Concatenate files from command line with glob pattern.",
  "keywords": [
    "glob",
    "wildcard",
    "file pattern",
    "concatenate",
    "command line"
  ],
  "main": "dist/globcat.js",
  "scripts": {
    "prelint": "echo ===== lint",
    "lint": "eslint . --fix",
    "prebuild": "npm run lint && echo ===== build",
    "build": "babel src --out-dir dist",
    "pretest": "npm run build && echo ===== test",
    "test": "tap \"test/**/*Test.js\"",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prewatch": "npm install --silent",
    "watch": "onchange \"test/**/*Test.js\" \"src/**/*.js\" -i -v -w -- npm test"
  },
  "bin": {
    "globcat": "dist/bin/globcat.js"
  },
  "dependencies": {
    "async": "^3.1.1",
    "combined-stream2": "^1.1.2",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "is-stream": "^2.0.0",
    "onchange": "^6.1.0",
    "prettier": "^1.19.1",
    "tap": "^14.10.6"
  },
  "bugs": {
    "url": "https://github.com/smonn/globcat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/smonn/globcat.git"
  },
  "files": [
    "dist"
  ],
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "homepage": "https://github.com/smonn/globcat#readme",
  "author": "Simon Ingeson <smonnsource@gmail.com> (https://www.smonn.se/)",
  "license": "MIT"
}
