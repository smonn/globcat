{
  "name": "globcat",
  "version": "1.0.2",
  "description": "Concatenate files from command line with glob pattern.",
  "keywords": [
    "glob",
    "wildcard",
    "file pattern",
    "concatenate",
    "command line"
  ],
  "main": "dist/globcat.js",
  "scripts": {
    "precoverage": "npm run build && echo ===== coverage",
    "coverage": "istanbul cover tape -- \"test/**/*Test.js\"",
    "prelint": "echo ===== lint",
    "lint": "standard",
    "prebuild": "npm run lint && echo ===== build",
    "build": "babel src --out-dir dist",
    "pretest": "npm run build && echo ===== test",
    "test": "tape \"test/**/*Test.js\" | tap-spec",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prewatch": "npm install --silent",
    "watch": "onchange \"test/**/*Test.js\" \"src/**/*.js\" -i -v -w -- npm test"
  },
  "bin": {
    "globcat": "dist/bin/globcat.js"
  },
  "dependencies": {
    "async": "^2.0.0",
    "combined-stream2": "^1.1.2",
    "command-line-args": "^3.0.0",
    "command-line-usage": "^3.0.3",
    "glob": "^7.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "is-stream": "^1.1.0",
    "istanbul": "^0.4.4",
    "onchange": "^3.0.0",
    "standard": "^8.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0"
  },
  "bugs": {
    "url": "https://github.com/smonn/globcat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/smonn/globcat.git"
  },
  "files": [
    "dist"
  ],
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "engines": {
    "node": ">=4.3.1",
    "npm": ">=3.0.0"
  },
  "homepage": "https://github.com/smonn/globcat#readme",
  "author": "Simon Ingeson <simon.ingeson@gmail.com> (http://www.ingeson.se/)",
  "license": "MIT"
}
